@model MakeMyCapServer.Controllers.Model.ServiceStatus;

@{
    ViewData["Title"] = "Home Page";
}

<div>
    <h1 class="display-4" style="padding-bottom: 10px">Make My Cap Server Status</h1>
    
    <div class="row" style="padding:4px;">
        <div class="border border-success rounded col-lg-5 col-12" style="padding: 4px; margin: 4px;">
            <table class="table table-striped table-sm" style="margin-top: 8px;">
                <thead class="table-dark">
                <tr>
                <th style="width: 35%">Service name</th>
                <th style="width: 25%">Start time</th>
                <th style="width: 25%">End time</th>
                <th>Failed?</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var log in @Model.InventoryServiceStatus)
                {
                    <tr>
                        <td>@log.ServiceName</td>
                        <td>@log.StartTime</td>
                        <td>@log.EndTime</td>
                        <td>@log.Failed</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
        <div class="border border-primary rounded col-lg-5 col-12" style="padding: 4px; margin: 4px;">
