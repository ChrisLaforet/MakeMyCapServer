@model MakeMyCapServer.Controllers.Model.Credential;

@{
    ViewData["Title"] = "Log in";
}

<div class="container border" style="padding: 20px;">
	<form method="post" action="/Login/Authenticate">
	    <div asp-validation-summary="ModelOnly" class="alert-danger"></div>

		<div class="form-group row" style="padding: 10px;">
			<div class="col-2">
				<label asp-for="UserName" class="control-label"></label>
			</div>
			<div class="col-6">
				<input type="text" asp-for="UserName" class="form-control"/>
				<span class="text-danger field-validation-valid" asp-validation-for="UserName"></span>
			</div>
		</div>
		
		<div class="form-group row" style="padding: 10px;">
			<div class="col-2">
				<label asp-for="Password" class="control-label"></label>
			</div>
			<div class="col-6">
				<input type="password" asp-for="Password" class="form-control"/>
				<span class="text-danger field-validation-valid" asp-validation-for="Password"></span >
			</div>
		</div>
		
		<div class="form-group row" style="padding: 10px;">
			<div class="col-2">
			</div>
			<div class="col-6">
				<button type="submit" class="btn btn-primary">Log me in</button>
			</div>
		</div>
		
		<div class="form-group row" style="padding: 10px;">
			<span class="col-2">
				&nbsp;
			</span>
			<span class="col-6">
				<a href="/Login/ForgotPassword">Click here if you forgot your password</a>
			</span>
		</div>
		
		<div class="form-group row" style="padding: 10px;">
			<span class="col-2">
				&nbsp;
			</span>
			<span class="col-6">
				<a href="/Login/ChangePassword">Click here to complete changing your password</a>
			</span>
		</div>
	</form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
