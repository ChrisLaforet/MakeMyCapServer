@model MakeMyCapServer.Controllers.Model.Credential;

@{
    ViewData["Title"] = "Log in";
}

<div class="container border" style="padding: 20px;">
	<form method="post">
		<div class="form-group row" style="padding: 10px;">
			<div class="col-2">
				<label asp-for="@Model.UserName"></label>
			</div>
			<div class="col-6">
				<input type="text" asp-for="@Model.UserName" class="form-control" />
			</div>
		</div>
		<div class="form-group row" style="padding: 10px;">
			<div class="col-2">
				<label asp-for="@Model.Password"></label>
			</div>
			<div class="col-6">
				<input type="password" asp-for="@Model.Password" class="form-control" />
			</div>
		</div>
		<div class="form-group row" style="padding: 10px;">
            <div class="col-2">
            </div>
            <div class="col-6">
                <input type="submit" label="Log me in" class="btn btn-primary" />
            </div>
        </div>
	</form>
</div>