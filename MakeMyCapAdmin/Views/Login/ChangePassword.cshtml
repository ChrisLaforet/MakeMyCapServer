@model MakeMyCapAdmin.Controllers.Model.PasswordChange;

@{
    ViewData["Title"] = "Change password";
}

<div class="container border" style="padding: 20px;">
	<form method="post" action="/login/completepasswordchange">
	    <div asp-validation-summary="All" class="alert-danger"></div>

		<div class="form-group row" style="padding: 10px;">
			<div class="col-2">
				<label asp-for="UserName" class="control-label"></label>
			</div>
			<div class="col-6">
				<input type="text" asp-for="UserName" class="form-control"/>
				<span class="text-danger field-validation-valid" asp-validation-for="UserName"></span>
			</div>
		</div>
		
		<div class="form-group row" style="padding: 10px;">
			<div class="col-2">
				<label asp-for="ResetKey" class="control-label"></label>
			</div>
			<div class="col-6">
				<input type="text" asp-for="ResetKey" class="form-control"/>
				<span class="text-danger field-validation-valid" asp-validation-for="ResetKey"></span>
			</div>
		</div>
		
		<div class="form-group row" style="padding: 10px;">
			<div class="col-2">
				<label asp-for="NewPassword" class="control-label"></label>
			</div>
			<div class="col-6">
				<input type="password" asp-for="NewPassword" class="form-control"/>
				<span class="text-danger field-validation-valid" asp-validation-for="NewPassword"></span >
			</div>
		</div>
		
		<div class="form-group row" style="padding: 10px;">
        	<div class="col-2">
        		<label asp-for="ConfirmPassword" class="control-label"></label>
        	</div>
        	<div class="col-6">
        		<input type="password" asp-for="ConfirmPassword" class="form-control"/>
        		<span class="text-danger field-validation-valid" asp-validation-for="ConfirmPassword"></span >
        	</div>
        </div>
		
		<div class="form-group row" style="padding: 10px;">
			<div class="col-2">
			</div>
			<div class="col-6">
				<button type="submit" class="btn btn-primary">Change password</button>
			</div>
		</div>
	</form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
